  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>Name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
      <tr>
        <th>Follows</th>
        <th>
          <%= link_to current_user.followings.count, user_followings_path(current_user.id) %>
        </th>
      </tr>
      <tr>
        <th>Followers</th>
        <th>
          <%= link_to current_user.followers.count, user_followers_path(current_user.id) %>
        </th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <div class="row">
    <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>
    <% end %>
  </div>
