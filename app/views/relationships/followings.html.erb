<main>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h2>フォロー</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @followings.each do |following| %>
              <tr>
                <td><%= image_tag following.get_profile_image(50,50) %></td>
                <td><%= following.name %></td>
                <td>フォロー数: <%= following.followings.count %></td>
                <td>フォロワー数: <%= following.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</main>